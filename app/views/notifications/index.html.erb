<%= render 'shared/header' %>

<main>
  <div class="container">
    <div class="side-bar">

      
    </div>
    <div class="notifications-wrapper">
      <% notifications = @notifications.where.not(visitor_id: current_user.id) %>
      <% if notifications.exists? %>
        <%= render 'notification' %>
      <% else %>
        <div class="notification">
          <p>通知はありません</p>
        </div>
      <% end %>
    </div>
  </div>
</main>

<%= render 'shared/footer' %>