<div class="post">
  <div class="post-upper">
    <div class="post-img"></div>
      <div class="text-box">
      <div class="user-nickname">
        <%= link_to post.user.nickname %>
      </div>
      <div class="text">
        <p>
          <%= post.text %>
        </p>
      </div>
    </div>
  </div>
  <div class="post-lower">
    <div class="likes">
      <span>likes: <%= post.likes.count %></span>
    </div>
    <div class="more">
      <%= link_to "show", post_path(post) %>
    </div>
  </div>
</div>